# Multi-Source Data Lake Environment Configuration Template
# Copy this file to .env and customize the values for your environment

# Application Configuration
APP_NAME=Multi-Source Data Lake
ENVIRONMENT=development
API_DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# CORS Configuration
CORS_ORIGINS=*

# Database Configuration - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=datalake
POSTGRES_USER=admin
POSTGRES_PASSWORD=changeme123
POSTGRES_MAX_CONNECTIONS=20

# Database Configuration - MongoDB
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=datalake
MONGO_USER=admin
MONGO_PASSWORD=changeme123
MONGO_MAX_POOL_SIZE=100

# Database Configuration - InfluxDB
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=my-super-secret-token
INFLUX_ORG=data-engineering
INFLUX_BUCKET=datalake

# Database Configuration - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Airflow Configuration
AIRFLOW_HOME=./airflow
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_ADMIN_EMAIL=admin@example.com

# OPC UA Configuration
OPCUA_ENDPOINT=opc.tcp://localhost:4840
OPCUA_SECURITY_POLICY=None

# MQTT Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC=data/sensors/#

# Data Paths
DATA_BASE_PATH=./data

# ETL Configuration
ETL_BATCH_SIZE=1000
ETL_PARALLEL_WORKERS=4
ETL_RETRY_ATTEMPTS=3
ETL_RETRY_DELAY=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/datalake.log

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Data Quality Configuration
DATA_QUALITY_MAX_NULL_PERCENTAGE=0.1
DATA_QUALITY_MAX_DUPLICATE_PERCENTAGE=0.05
DATA_QUALITY_MIN_RECORDS=1

# Performance Configuration
MAX_CONCURRENT_TASKS=10
REQUEST_TIMEOUT=300
CONNECTION_POOL_SIZE=20

# File Processing Configuration
MAX_FILE_SIZE_MB=100
SUPPORTED_FILE_TYPES=json,csv,parquet,xlsx

# Feature Flags
ENABLE_DATA_PROFILING=true
ENABLE_REAL_TIME_PROCESSING=false
ENABLE_DATA_LINEAGE=true
ENABLE_AUTO_SCALING=false
